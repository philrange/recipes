<h1>New Ingredient</h1>

<%= form_with scope: :ingredient, url: ingredients_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :unit %><br>
    <%= form.text_field :unit %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>